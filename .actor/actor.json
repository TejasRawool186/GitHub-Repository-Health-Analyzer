{
  "actorSpecification": 1,
  "name": "github-health-analyzer",
  "title": "GitHub Repository Health Analyzer",
  "description": "Audit GitHub repositories and get a 'Health Score' (0-100). Analyze 7 pillars: Readability, Stability, Security, Community, Maintainability, Documentation, and Automation. Get actionable recommendations!",
  "version": "1.2.0",
  "buildTag": "latest",
  "meta": {
    "templateId": "js-start"
  },
  "input": "./input_schema.json",
  "storages": {
    "dataset": {
      "actorSpecification": 1,
      "title": "GitHub Health Dashboard",
      "views": {
        "overview": {
          "title": "üèÜ Overview",
          "description": "Score, Grade & Key Metrics",
          "transformation": {
            "fields": [
              "repo_name",
              "health_score",
              "health_grade",
              "risk_level",
              "stars",
              "recommendation_count"
            ]
          },
          "display": {
            "component": "table",
            "properties": {
              "repo_name": {
                "label": "Repository",
                "format": "text"
              },
              "health_score": {
                "label": "Score",
                "format": "number"
              },
              "health_grade": {
                "label": "Grade",
                "format": "text"
              },
              "risk_level": {
                "label": "Risk",
                "format": "text"
              },
              "stars": {
                "label": "‚≠ê Stars",
                "format": "number"
              },
              "recommendation_count": {
                "label": "Tips",
                "format": "number"
              }
            }
          }
        },
        "tips": {
          "title": "üí° Tips",
          "description": "Improvement Suggestions",
          "transformation": {
            "fields": [
              "repo_name",
              "recommendation_count",
              "top_recommendations"
            ]
          },
          "display": {
            "component": "table",
            "properties": {
              "repo_name": {
                "label": "Repo",
                "format": "text"
              },
              "recommendation_count": {
                "label": "#",
                "format": "number"
              },
              "top_recommendations": {
                "label": "Top Issues",
                "format": "text"
              }
            }
          }
        },
        "scores": {
          "title": "üìä Scores",
          "description": "7 Pillar Breakdown",
          "transformation": {
            "fields": [
              "repo_name",
              "readability_score",
              "stability_score",
              "security_score",
              "community_score",
              "maintainability_score",
              "documentation_score",
              "automation_score"
            ]
          },
          "display": {
            "component": "table",
            "properties": {
              "repo_name": {
                "label": "Repo",
                "format": "text"
              },
              "readability_score": {
                "label": "üìñ Read",
                "format": "number"
              },
              "stability_score": {
                "label": "üß± Stable",
                "format": "number"
              },
              "security_score": {
                "label": "üîê Secure",
                "format": "number"
              },
              "community_score": {
                "label": "üë• Comm",
                "format": "number"
              },
              "maintainability_score": {
                "label": "üõ†Ô∏è Maint",
                "format": "number"
              },
              "documentation_score": {
                "label": "üìù Docs",
                "format": "number"
              },
              "automation_score": {
                "label": "ü§ñ Auto",
                "format": "number"
              }
            }
          }
        },
        "details": {
          "title": "üìã Details",
          "description": "Security & Config",
          "transformation": {
            "fields": [
              "repo_name",
              "license_type",
              "license_risk",
              "has_security_md",
              "dependabot_enabled",
              "workflow_count"
            ]
          },
          "display": {
            "component": "table",
            "properties": {
              "repo_name": {
                "label": "Repo",
                "format": "text"
              },
              "license_type": {
                "label": "License",
                "format": "text"
              },
              "license_risk": {
                "label": "Risk",
                "format": "text"
              },
              "has_security_md": {
                "label": "Security",
                "format": "text"
              },
              "dependabot_enabled": {
                "label": "Dependabot",
                "format": "text"
              },
              "workflow_count": {
                "label": "CI/CD",
                "format": "number"
              }
            }
          }
        }
      }
    }
  }
}